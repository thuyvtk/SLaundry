<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardviewborder"

        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="3dp">
            <ImageView
                android:id="@+id/service_img"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/demo_profile"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/service_name"
                        android:layout_width="220dp"
                        android:layout_height="40dp"
                        android:text="1-3kg Giao tra sau 6"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14dp"/>

                    <ImageButton
                        android:id="@+id/updateService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@color/white"
                        android:src="@drawable/ic_edit_black_24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/service_price"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="45000 VND"
                        android:textColor="#000099"
                        android:textSize="12dp"/>
                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:background="@color/white"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>