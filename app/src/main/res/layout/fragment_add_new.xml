<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker"
    tools:context=".fragment.AddNewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--    progress basr-->
        <LinearLayout
            android:id="@+id/ln_waiting"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:progressTint="@color/puple_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Loading ..."
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/gradient_purple_1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="15dp"
                android:fontFamily="serif-monospace"
                android:text="sLaundry"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boder_radius_scrollview"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darker"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnWash"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_radius_tab_item"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/service_wash"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/border_cycle"
                            android:padding="30px"
                            android:src="@drawable/ic_wash_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="Wash"
                            android:textColor="@color/puple_blue"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnIron"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/boder_radius_tab_item"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/border_cycle"
                            android:padding="30px"
                            android:src="@drawable/ic_iron" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="Launder"
                            android:textColor="@color/puple_blue"
                            android:textSize="20dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnVest"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_radius_tab_item"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/border_cycle"
                            android:padding="30px"
                            android:src="@drawable/ic_wedding_suit_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="Vest"
                            android:textColor="@color/puple_blue"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnStuffed"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/boder_radius_tab_item"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/border_cycle"
                            android:padding="30px"
                            android:src="@drawable/ic_teddy_bear_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="Stuffed"
                            android:textColor="@color/puple_blue"
                            android:textSize="20dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnShoes"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_radius_tab_item"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/border_cycle"
                            android:padding="30px"
                            android:src="@drawable/ic_sneakers_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="Shoes"
                            android:textColor="@color/puple_blue"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnDry"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/boder_radius_tab_item"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/border_cycle"
                            android:padding="30px"
                            android:src="@drawable/ic_drops_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="Dry cleaning"
                            android:textColor="@color/puple_blue"
                            android:textSize="20dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnBlanket"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/boder_radius_tab_item"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/border_cycle"
                            android:padding="30px"
                            android:src="@drawable/ic_blanket" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="Blanket"
                            android:textColor="@color/puple_blue"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnOther"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/boder_radius_tab_item"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/border_cycle"
                            android:padding="30px"
                            android:src="@drawable/ic_plus" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:text="Other"
                            android:textColor="@color/puple_blue"
                            android:textSize="20dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>